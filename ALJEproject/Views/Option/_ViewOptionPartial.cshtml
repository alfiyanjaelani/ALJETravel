@model ALJEproject.Models.Option

<div class="modal fade" id="viewOptionModal" tabindex="-1" role="dialog" aria-labelledby="viewOptionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewOptionModalLabel">Option Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label><strong>OptionsID:</strong></label>
                    <p>@Model.OptionsID</p>
                </div>
                <div class="form-group">
                    <label><strong>FieldName:</strong></label>
                    <p>@Model.FieldName</p>
                </div>
                <div class="form-group">
                    <label><strong>FieldValue:</strong></label>
                    <p>@Model.FieldValue</p>
                </div>
                <div class="form-group">
                    <label><strong>LongName:</strong></label>
                    <p>@Model.LongName</p>
                </div>
                <div class="form-group">
                    <label><strong>ShortName:</strong></label>
                    <p>@Model.ShortName</p>
                </div>
                <div class="form-group">
                    <label><strong>CreatedDate:</strong></label>
                    <p>@Model.CreatedDate</p>
                </div>
                <div class="form-group">
                    <label><strong>CreatedBy:</strong></label>
                    <p>@Model.CreatedBy</p>
                </div>
                <div class="form-group">
                    <label><strong>UpdatedDate:</strong></label>
                    <p>@Model.UpdatedDate</p>
                </div>
                <div class="form-group">
                    <label><strong>UpdatedBy:</strong></label>
                    <p>@Model.UpdatedBy</p>
                </div>
                <div class="form-group">
                    <label><strong>Active:</strong></label>
                    <p>@Model.Active</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
