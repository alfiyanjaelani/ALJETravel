@model ALJEproject.Models.UserAccess

<div class="modal fade" id="editUserAccessModal" tabindex="-1" role="dialog" aria-labelledby="editUserAccessModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserAccessModalLabel">Edit User Access</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post" id="editUserAccessForm">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Hidden fields to maintain UserAccessID, CreatedBy, and CreatedDate -->
                    <input type="hidden" asp-for="UserAccessID" />
                    <input type="hidden" asp-for="CreatedBy" />
                    <input type="hidden" asp-for="CreatedDate" />

                    <div class="form-group">
                        <label asp-for="RoleID" class="control-label"></label>
                        <select asp-for="RoleID" class="form-control" asp-items="ViewBag.RoleList"></select>
                        <span asp-validation-for="RoleID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MenuID" class="control-label"></label>
                        <select asp-for="MenuID" class="form-control" asp-items="ViewBag.MenuList"></select>
                        <span asp-validation-for="MenuID" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="Views" class="form-check-input" type="checkbox" />
                        <label asp-for="Views" class="form-check-label">View Permission</label>
                        <span asp-validation-for="Views" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="Inserts" class="form-check-input" type="checkbox" />
                        <label asp-for="Inserts" class="form-check-label">Insert Permission</label>
                        <span asp-validation-for="Inserts" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="Edits" class="form-check-input" type="checkbox" />
                        <label asp-for="Edits" class="form-check-label">Edit Permission</label>
                        <span asp-validation-for="Edits" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="Deletes" class="form-check-input" type="checkbox" />
                        <label asp-for="Deletes" class="form-check-label">Delete Permission</label>
                        <span asp-validation-for="Deletes" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
