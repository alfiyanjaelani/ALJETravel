@model ALJEproject.Models.Menu

<div class="modal fade" id="editMenuModal" tabindex="-1" role="dialog" aria-labelledby="editMenuModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editMenuModalLabel">Edit Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post" id="editMenuForm">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <input type="hidden" asp-for="MenuID" /> <!-- Hidden field for MenuID -->
                    <input type="hidden" asp-for="CreatedDate" /> <!-- Keep the original created date -->
                    <input type="hidden" asp-for="CreatedBy" /> <!-- Keep the original created by -->
                    <div class="form-group">
                        <label asp-for="MenuName" class="control-label"></label>
                        <input asp-for="MenuName" class="form-control" />
                        <span asp-validation-for="MenuName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ControllerName" class="control-label"></label>
                        <input asp-for="ControllerName" class="form-control" />
                        <span asp-validation-for="ControllerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuURL" class="control-label"></label>
                        <input asp-for="MenuURL" class="form-control" />
                        <span asp-validation-for="MenuURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuDesc" class="control-label"></label>
                        <input asp-for="MenuDesc" class="form-control" />
                        <span asp-validation-for="MenuDesc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuOrder" class="control-label"></label>
                        <input asp-for="MenuOrder" class="form-control" type="number" />
                        <span asp-validation-for="MenuOrder" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input asp-for="Active" class="form-check-input" type="checkbox" />
                        <label asp-for="Active" class="form-check-label"></label>
                        <span asp-validation-for="Active" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>