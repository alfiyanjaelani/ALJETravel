@model ALJEproject.Models.Role


<div class="modal fade" id="viewRoleModal" tabindex="-1" role="dialog" aria-labelledby="viewRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewRoleModalLabel">Role Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label><strong>Role ID:</strong></label>
                    <p>@Model.RoleID</p>
                </div>
                <div class="form-group">
                    <label><strong>RoleName:</strong></label>
                    <p>@Model.RoleName</p>
                </div>
                <div class="form-group">
                    <label><strong>CreatedBy :</strong></label>
                    <p>@Model.CreatedBy</p>
                </div>
                <div class="form-group">
                    <label><strong>CreatedDate :</strong></label>
                    <p>@Model.CreatedDate</p>
                </div>
                <div class="form-group">
                    <label><strong>UpdatedBy :</strong></label>
                    <p>@Model.UpdatedBy</p>
                </div>
                <div class="form-group">
                    <label><strong>UpdatedDate :</strong></label>
                    <p>@Model.UpdatedDate</p>
                </div>
                <!-- Add other fields if necessary -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
